@inherits LayoutComponentBase

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <BlazoredToasts />
    <div class="px-4">
        @if (ServerSettings.UseAuth)
        {
            <LoginControl />
        }
    </div>

    <div class="content px-1">
        @if (ServerSettings.UseAuth)
        {
            <AuthorizeView>
                <Authorized>
                    @Body
                </Authorized>
            </AuthorizeView>
        }
        else
        {
            @Body
        }
    </div>
</div>
